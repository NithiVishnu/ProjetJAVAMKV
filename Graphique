    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
        // TODO add your handling code here:
        DefaultCategoryDataset defaultcategory = new DefaultCategoryDataset();
        
        defaultcategory.addValue(12,"Serie1","Maths");
        defaultcategory.addValue(6,"Serie2","Physique");
        defaultcategory.addValue(20,"Serie3","Informatique");
        
        JFreeChart chart=ChartFactory.createBarChart3D("Graphique de Notes de NOM ICIIIIIIII","Mati√®res","Notes",defaultcategory,PlotOrientation.VERTICAL, true, true,true);
        ChartFrame frame = new ChartFrame("Graphique",chart);
        frame.pack();
        frame.setVisible(true);
        
    }                                        

